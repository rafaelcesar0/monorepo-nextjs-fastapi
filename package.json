{
	"name": "node-python",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"type": "module",
	"scripts": {
		"dev": "turbo dev",
		"web:dev": "turbo -F web dev",
		"api:dev": "turbo -F api dev",
		"api:client": "turbo -F @node-python/api-client codegen",
		"build": "turbo build",
		"lint": "turbo lint",
		"test": "turbo test",
		"check-types": "turbo check-types",
		"check": "biome check --write --unsafe .",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui"
	},
	"dependencies": {
		"dotenv": "^17.2.2",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@node-python/config": "workspace:*",
		"@playwright/test": "^1.55.0",
		"turbo": "^2.6.3",
		"typescript": "^5"
	},
	"packageManager": "bun@1.3.5"
}
